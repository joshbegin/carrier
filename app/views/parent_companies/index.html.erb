<% provide(:title, "Parent Companies") %> 
<h3>Parent Companies</h3>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
	    <th>Name</th>
	    <th>Alias</th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>

	<tbody>
		<% @parent_companies.each do |parent_company| %>
		  <tr>
		    <td><%= link_to "#{parent_company.name}", parent_company %></td>
		    <td><%= parent_company.alias %></td>
		    <td><%= link_to raw('<i class="icon-edit"></i> Edit'), edit_parent_company_path(parent_company), class: "btn btn-small" if current_user.admin? %></td>
		    <td><%= link_to raw('<i class="icon-trash icon-white"></i> Delete'), parent_company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" if current_user.admin? %></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to raw('<i class="icon-plus icon-white"></i> Add Parent Company'), new_parent_company_path, class: "btn btn-primary" if current_user.admin? %>
