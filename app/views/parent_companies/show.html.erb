<% provide(:title, "Parent Company Details") %> 
<h3><%= "#{@parent_company.name} Details"%></h3>

<div class="row">
	<div class="span6 well">
		<p>
		  <b>Name:</b>
		  <%= @parent_company.name %>
		</p>

		<p>
		  <b>Alias:</b>
		  <%= @parent_company.alias %>
		</p>
		
		<%= link_to 'Edit', edit_parent_company_path(@parent_company), class: "btn" if current_user.admin? %>
	</div>
</div>

<h4>Child Company Details</h2>
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
	    <th>Name</th>
	    <th>AI Code</th>
			<th>NAIC Code</th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>

	<tbody>
		<% @companies.each do |company| %>
		  <tr>
		    <td><%= link_to "#{company.name}", company %></td>
				<td><%= company.ai_carrier_code %></td>
				<td><%= company.naic_code %></td>
		    <td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-small" if current_user.admin? %></td>
		    <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger' if current_user.admin? %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<div class="row">
	<div class="span3">
		<%= link_to 'Add Company', new_company_path, class: "btn btn-primary" if current_user.admin? %>
	</div>
</div>

<div class="row">
	<div class="span3">
		<br/><%= link_to 'Back', parent_companies_path %>
	</div>
</div>