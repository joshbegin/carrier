<% provide(:title, "#{@company.company_type.name}") %> 
<div class="row">
	<div class="span7">
		<ul class="breadcrumb">
			<% unless @company.parent_company.nil? %>
				<li><%= link_to @company.parent_company.name, parent_company_url(@company.parent_company) %> <span class="divider">/</span></li>
			<% end %>
		  <li class="active"><%= @company.name %></li>
		</ul>
	</div>
</div>

<div class="row">
	<div class="span6">
		<h3><%= "#{@company.name} Details" %></h3>
	</div>
</div>

<div class="row">
	<div class="span5 well">
		
		<p>
		  <strong>Name:</strong>
		  <%= @company.try(:name) %>
		</p>
		
		<p>
		  <strong>Alias:</strong>
		  <%= @company.alias %>
		</p>
		
		<p>
		  <strong>Parent company:</strong>
		  <%= link_to "#{@company.parent_company.name}", parent_company_path(@company.parent_company) unless @company.parent_company.nil? %>
		</p>

		<p>
		  <strong>Company type:</strong>
		  <%= @company.company_type.try(:name) %>
		</p>
		
		<p>
		  <strong>AI Carrier Code:</strong>
		  <%= @company.ai_carrier_code %>
		</p>
		
		<p>
		  <strong>NAIC code:</strong>
		  <%= @company.naic_code %>
		</p>

	</div>

	<div class="span5 well">
		<address>
			<strong>Address:</strong><br/>
		  <%= @company.address_line_1 %><br/>
		  <%= @company.address_line_2 %><br/>
		  <%= @company.address_line_3 %><br/>
		  <%= @company.city %>, <%= @company.state.try(:name) %> <%= @company.zip %>
		</address>

		<p>
		  <b>URL:</b>
		  <%= @company.url %>
		</p>

	</div>

	<div class="span7 well">
		<p>
		  <b>Notes:</b>
		  <%= @company.notes %>
		</p>
	</div>
</div>

<div class="row">
	<div class="span4">
		<%= link_to raw('<i class="icon-edit icon-white"></i> Edit'), edit_company_path(@company), class: "btn btn-primary" if current_user.admin? %>
		<br/><br/>
	</div>
</div>

<hr/>

<h3><%= "Feeds for #{@company.name}" %></h3>

<%= render 'shared/feeds' %>

