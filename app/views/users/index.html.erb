<% provide(:title, "Users") %> 
<h3>Users</h3>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th>Admin?</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user %></td>
        <td><%= user.email %></td>
        <td><%= active_text(user) %>
					<% if !current_user?(user) %>
					 (<%= link_to active_link_text(user),   
            toggle_active_user_path(user),   
            id: "active_link_#{user.id}" %>)
					<% end %>
				</td>
        <td><%= admin_text(user) %>
					<% if !current_user?(user) %>
					 (<%= link_to admin_link_text(user),   
            toggle_admin_user_path(user),   
            id: "admin_link_#{user.id}" %>)
					<% end %>
				</td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-small" if current_user?(user) %></td>
        <td><% if !current_user?(user) %>
  				<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %>
				<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New User', new_user_path %>
