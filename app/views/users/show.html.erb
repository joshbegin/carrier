<% provide(:title, "User details") %> 
<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span2">
    <%= gravatar_for(@user, size: '200') %>
  </div>

  <div class="span9">
    <h3><%= @user.full_name %></h3>
    <strong>Email:</strong>
    <%= @user.email %><br/><br/>
    <em><%= "User for #{time_ago_in_words(@user.created_at)}" %></em><br/><br/>
    <% if current_user.admin? && !current_user?(@user) %>
			<div class="span3">
	      <%= link_to active_link_text(@user), toggle_active_user_path(@user), 
	          id: "active_link_#{@user.id}", class: "btn" %>  
	    </div>
	    <div class="span3">
	      <%= link_to admin_link_text(@user), toggle_admin_user_path(@user), 
	          id: "admin_link_#{@user.id}", class: "btn" %>  
	    </div><br/><br/>
		<% end %>
		<% if current_user?(@user) %>
			<%= link_to "Set user image", "http://en.gravatar.com/" %>
		<% end %>
  </div>
</div>

<div class="row-fluid">
	<div class="span6">
		<hr/>
	  <%= link_to 'Edit | ', edit_user_path(@user) if current_user?(@user)%> 
		<%= link_to 'Back', :back %>
	</div>
</div>