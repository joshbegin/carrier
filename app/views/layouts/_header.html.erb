<header class="navbar navbar-fixed-top">
	<% active = yield(:title) %>
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="brand">Carrier</div>
    
      <nav>
        <ul class="nav">
          <% if signed_in? %>
            <li<%= ' class=active' if active == "Users" %>>
							<%= link_to "Users", users_path if current_user.admin? %>
						</li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li<%= ' class=active' if active == "User details" %>>
								  <%= link_to "Profile", current_user %>
								</li>
                <li<%= ' class=active' if active == "Edit user" %>>
								  <%= link_to "Settings", edit_user_path(current_user) %>
								</li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>